{
  "manifest_version": 3,
  "name": "Dash Highlighter",
  "version": "1.0",
  "description": "Highlights en dashes and em dashes on web pages",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
